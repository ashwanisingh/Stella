<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@mipmap/bg</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:fontFamily">@font/columbia_serial_light</item>
    </style>

    <style name="StellarButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/drawable_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="StellarWhiteButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/drawable_button_bg</item>
        <item name="android:textColor">@color/colorButtonNew</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingStart">30dp</item>
    </style>

    <style name="StellarTextView_22sp" parent="android:Widget.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

