<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".drawer.PreferenceLaunchActivity">

    <LinearLayout
            android:id="@+id/layout_boarding_pass_details_base"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/button_preferences_back"
                style="@style/StellarBackButton"/>

        <TextView
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:layout_marginStart="-26dp"
                style="@style/StellarTextView_20sp"
                android:text="@string/drawer_info_preferences"
                android:id="@+id/textView_preferences_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
            android:layout_marginTop="100dp"
            android:layout_marginStart="32dp"
            style="@style/StellarTextView_18sp"
            android:layout_marginEnd="30dp"
            android:drawableEnd="@drawable/ic_date_next"
            android:text="@string/info_preferences_managers"
            android:id="@+id/textView_preferences_managers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="@string/info_preferences_managers_help"
            android:layout_marginTop="9dp"
            android:layout_marginStart="32dp"
            android:alpha="0.5"
            style="@style/StellarTextView_16sp"
            android:id="@+id/textView_preferences_managers_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            android:alpha="0.2"
            android:layout_marginStart="24dp"
            android:layout_marginTop="19dp"
            android:background="@color/colorAddressDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    <TextView
            android:layout_marginTop="26dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="30dp"
            android:text="@string/booking_title_food_preferences"
            style="@style/StellarTextView_18sp"
            android:drawableEnd="@drawable/ic_date_next"
            android:id="@+id/textView_preferences_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="@string/info_preferences_food_help"
            android:layout_marginTop="9dp"
            android:layout_marginStart="32dp"
            android:alpha="0.5"
            style="@style/StellarTextView_16sp"
            android:id="@+id/textView_preferences_food_preferences_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            android:alpha="0.2"
            android:layout_marginStart="24dp"
            android:layout_marginTop="19dp"
            android:background="@color/colorAddressDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

</LinearLayout>