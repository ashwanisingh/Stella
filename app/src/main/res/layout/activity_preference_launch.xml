<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        tools:context=".drawer.PreferenceLaunchActivity">

    <Button
            android:id="@+id/button_preferences_back"
            style="@style/StellarBackButton"/>

    <TextView
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_marginStart="28dp"
            style="@style/StellarTextView_20sp"
            android:text="@string/drawer_info_preferences_heading"
            android:id="@+id/textView_preferences_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_preferences_managers"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="85dp">

        <TextView
                style="@style/StellarTextView_18sp"
                android:text="@string/info_preferences_managers"
                android:id="@+id/textView_preferences_managers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textView_preferences_managers_help"/>

        <TextView
                android:text="@string/info_preferences_managers_help"
                android:alpha="0.5"
                style="@style/StellarTextView_16sp"
                android:id="@+id/textView_preferences_managers_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/textView_preferences_managers"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_preferences_managers"/>

        <ImageView
                android:src="@drawable/ic_date_next"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
            android:id="@+id/view_preferences_managers"
            android:alpha="0.2"
            android:layout_marginStart="24dp"
            android:background="@color/colorAddressDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_preferences_food"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="85dp">

        <TextView
                android:text="@string/info_preferences_dining"
                style="@style/StellarTextView_18sp"
                android:id="@+id/textView_preferences_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textView_preferences_food_preferences_help"/>

        <TextView
                android:text="@string/info_preferences_food_help"
                android:alpha="0.5"
                style="@style/StellarTextView_16sp"
                android:id="@+id/textView_preferences_food_preferences_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/textView_preferences_food"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_preferences_food"/>

        <ImageView
                android:src="@drawable/ic_date_next"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
            android:alpha="0.2"
            android:layout_marginStart="24dp"
            android:background="@color/colorAddressDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

</LinearLayout>