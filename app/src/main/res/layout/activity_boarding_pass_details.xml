<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="boardingPass"
                type="com.ns.networking.model.Booking"/>
    </data>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                tools:context=".drawer.BoardingPassDetailsActivity">

            <LinearLayout
                    android:id="@+id/layout_boarding_pass_details_base"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/button_boarding_pass_details_back"
                        style="@style/StellarBackButton"/>

                <TextView
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:layout_marginStart="-26dp"
                        style="@style/StellarTextView_20sp"
                        android:text="@string/boardingPass_details_title"
                        android:id="@+id/textView_boardingPass_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:id="@+id/layout_row_boarding_pass_city">

                <TextView
                        tools:text="@string/booking_from_city"
                        android:text="@{boardingPass.from_city_info.name}"
                        style="@style/StellarTextView_16sp"
                        android:alpha="0.9"
                        android:textAllCaps="true"
                        android:id="@+id/textView_row_boarding_pass_details_from_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="18dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                        tools:text="@string/booking_to_city"
                        android:text="@{boardingPass.to_city_info.name}"
                        style="@style/StellarTextView_16sp"
                        android:alpha="0.9"
                        android:textAllCaps="true"
                        android:id="@+id/textView_row_boarding_pass_details_to_city"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="18dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                        android:id="@+id/imageView_boarding_pass_flight"
                        android:src="@drawable/ic_flight_alone"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:contentDescription="@string/drawer_info_boarding_pass"/>

                <TextView
                        style="@style/StellarTextView_12sp"
                        android:alpha="0.4"
                        tools:text="@string/booking_airport_sample"
                        android:text="@{boardingPass.from_city_info.airport}"
                        android:id="@+id/textView_row_boarding_pass_details_from_airport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/textView_row_boarding_pass_details_from_city"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView_row_boarding_pass_details_from_city"/>

                <TextView
                        style="@style/StellarTextView_12sp"
                        android:alpha="0.4"
                        tools:text="@string/booking_airport_sample"
                        android:text="@{boardingPass.to_city_info.airport}"
                        android:id="@+id/textView_row_boarding_pass_details_to_airport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@+id/textView_row_boarding_pass_details_to_city"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView_row_boarding_pass_details_to_city"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                    android:text="@string/booking_summary_date"
                    style="@style/StellarTextView_12sp"
                    android:alpha="0.4"
                    android:textAllCaps="true"
                    android:id="@+id/textView_row_boarding_pass_details_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="24dp"/>

            <TextView
                    tools:text="@string/booking_summary_date_dummy"
                    style="@style/StellarTextView_16sp"
                    android:alpha="0.8"
                    android:id="@+id/textView_row_boarding_pass_details_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="7dp"/>

            <TextView
                    android:textAllCaps="true"
                    android:text="@string/info_passenger_text"
                    android:alpha="0.4"
                    style="@style/StellarTextView_12sp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="40dp"
                    android:id="@+id/textView_boarding_pass_details_passengers_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/info_passenger_dummy"
                    android:alpha="0.8"
                    style="@style/StellarTextView_16sp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:lineSpacingExtra="10dp"
                    android:layout_marginTop="7dp"
                    android:id="@+id/textView_boarding_pass_details_passengers_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/booking_summary_booked_seats"
                    android:alpha="0.4"
                    android:textAllCaps="true"
                    style="@style/StellarTextView_12sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="24dp"
                    android:id="@+id/textView_boarding_pass_details_seats_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:alpha="0.8"
                    style="@style/StellarTextView_16sp"
                    android:text="@string/booking_summary_booked_seats_names"
                    android:id="@+id/textView_boarding_pass_details_seats_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="28dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:alpha="0.4"
                        android:textAllCaps="true"
                        style="@style/StellarTextView_12sp"
                        android:text="@string/booking_summary_departure_time"
                        android:id="@+id/textView_boarding_pass_details_departure_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                        style="@style/StellarTextView_16sp"
                        android:alpha="0.8"
                        tools:text="@string/booking_summary_departure_time_dummy"
                        android:id="@+id/textView_boarding_pass_details_departure_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView_boarding_pass_details_departure_time_title"
                        app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                        android:alpha="0.4"
                        style="@style/StellarTextView_12sp"
                        android:textAllCaps="true"
                        android:text="@string/boardingPass_reach_plane_by"
                        android:id="@+id/textView_boarding_pass_details_reach_plane_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                        android:text="@string/boardingPass_reach_plane_by_dummy"
                        android:alpha="0.8"
                        style="@style/StellarTextView_16sp"
                        android:id="@+id/textView_boarding_pass_details_reach_plane_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="7dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView_boarding_pass_details_reach_plane_title"/>

                <TextView
                        android:text="@string/boardingPass_flight_title"
                        android:alpha="0.4"
                        style="@style/StellarTextView_12sp"
                        android:id="@+id/textView_boarding_pass_details_flight_no_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="37dp"
                        android:textAllCaps="true"
                        app:layout_constraintTop_toBottomOf="@+id/textView_boarding_pass_details_departure_time"
                        app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                        android:text="@{boardingPass.flight_no}"
                        tools:text="@string/boardingPass_dummy_flight_name"
                        android:alpha="0.8"
                        style="@style/StellarTextView_16sp"
                        android:id="@+id/textView_boarding_pass_details_flight_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView_boarding_pass_details_flight_no_title"
                        app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                        android:visibility="invisible"
                        android:text="@string/boardingPass_aircraft_no"
                        android:alpha="0.4"
                        style="@style/StellarTextView_12sp"
                        android:id="@+id/textView_boarding_pass_details_aircraft_title"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="37dp"
                        android:textAllCaps="true"
                        app:layout_constraintTop_toBottomOf="@+id/textView_boarding_pass_details_reach_plane_by"/>

                <TextView
                        android:visibility="invisible"
                        android:text="@string/boardingPass_aircraft_no_dummy"
                        android:alpha="0.8"
                        style="@style/StellarTextView_16sp"
                        android:id="@+id/textView_boarding_pass_details_aircraft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="7dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView_boarding_pass_details_aircraft_title"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>
</layout>
