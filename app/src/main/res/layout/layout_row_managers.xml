<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="@string/info_preferences_managers_dummy_name"
            style="@style/StellarTextView_18sp"
            android:id="@+id/textView_row_managers_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:text="@string/info_preferences_managers_dummy_phone"
            android:alpha="0.5"
            style="@style/StellarTextView_16sp"
            android:id="@+id/textView_row_managers_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_row_managers_name"
            app:layout_constraintStart_toStartOf="@+id/textView_row_managers_name"/>

    <ImageView
            android:src="@drawable/ic_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_row_managers_phone"
            app:layout_constraintTop_toTopOf="@+id/textView_row_managers_name"
            android:contentDescription="@string/info_preferences_managers"/>

    <View
            android:background="@color/colorAddressDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha="0.2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_row_managers_phone"/>

</androidx.constraintlayout.widget.ConstraintLayout>