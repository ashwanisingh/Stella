<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            tools:context=".drawer.BoardingPassActivity">


            <Button
                    android:layout_marginStart="15dp"
                    android:id="@+id/button_boarding_pass_back"
                    style="@style/StellarBackButton"/>

            <TextView
                    android:layout_marginTop="26dp"
                    android:gravity="center"
                    android:layout_marginStart="27dp"
                    style="@style/StellarTextView_22sp"
                    android:text="@string/boardingPass_heading"
                    android:id="@+id/textView_boardingPass_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_boarding_pass"
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/layout_row_boarding_pass"
                tools:orientation="horizontal"/>

    </LinearLayout>
</layout>