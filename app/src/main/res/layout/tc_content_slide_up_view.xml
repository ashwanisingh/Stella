<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/content_slide_up_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
>

    <LinearLayout
            android:id="@+id/slideView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/tc_rounded_up_corners_bg">

        <LinearLayout
                android:id="@+id/tc_slider_header"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:background="@color/tcSliderHeader">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="16sp"
                    android:text="Terms &amp; Conditions "
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
            />

            <ImageView
                    android:id="@+id/tc_cross_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_tc"
                    android:layout_gravity="center_vertical"/>

        </LinearLayout>


        <!--WebContent Layout-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                        android:orientation="vertical"
                      android:layout_weight="1"
                      android:background="#34354c"
                      android:padding="24dp"
        >
            <TextView
                    android:id="@+id/tc_textviewHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="8sp"
                    android:layout_marginBottom="18dp"

            />
        <TextView
                android:id="@+id/tc_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="9sp"
                android:alpha="0.8"

        />
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp">

            <TextView
                    android:id="@+id/i_agree_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:letterSpacing="0.03"
                    android:text="I agree Terms &amp; Conditions"
                    android:drawableLeft="@drawable/ic_tik_uncheck"
                    android:drawableStart="@drawable/ic_tik_uncheck"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="19dp"
                    android:gravity="center_vertical"/>

            <Button
                    android:id="@+id/tc_button"
                    style="@style/StellarWhiteButton"
                    android:gravity="center_vertical|start"
                    tools:text="@string/home_button_book_flight"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="24dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="23dp"
                    android:layout_height="50dp"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
