<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

    <TextView
            android:drawableStart="@drawable/ic_saved_addr_pin"
            android:drawablePadding="21dp"
            android:id="@+id/textView_saved_address_name"
            style="@style/StellarTextView_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            tools:text="Bangalore Home"/>

    <TextView
            android:id="@+id/textView_saved_address"
            style="@style/StellarTextView_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.3"
            android:layout_marginStart="35dp"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            tools:text="Snn Raj Serenity, Yelanahalli, Begur Ro..."/>

</LinearLayout>