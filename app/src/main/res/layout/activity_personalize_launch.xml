<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fitsSystemWindows="true"
            tools:context=".personalize.PersonalizeLaunchActivity">


        <Button
                android:id="@+id/button_personalize_home"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="26dp"
                android:background="@drawable/ic_home"/>

        <TextView
                style="@style/StellarTextView_22sp"
                android:id="@+id/textView_title"
                android:text="@string/personalize"
                android:layout_width="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"/>

        <TextView
                style="@style/StellarTextView_14sp"
                android:alpha="0.5"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/personalize_header"
                android:id="@+id/textView_personalize_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <LinearLayout
                android:id="@+id/layout_personalize_cab"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="74dp"
                android:gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="30dp"
                android:orientation="horizontal">

            <TextView
                    style="@style/StellarTextView_18sp"
                    android:text="@string/personalize_cab_title"
                    android:id="@+id/textView_personalize_cab_preferences"
                    android:layout_weight="1"
                    android:drawablePadding="14dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:src="@drawable/ic_date_next"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:alpha="0.2"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@color/colorAddressDivider"/>


        <LinearLayout
                android:id="@+id/layout_personalize_food"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="30dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_weight="1"
                    style="@style/StellarTextView_18sp"
                    android:drawablePadding="14dp"
                    android:text="@string/personalize_food_title"
                    android:id="@+id/textView_personalize_food_preferences"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:src="@drawable/ic_date_next"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:alpha="0.2"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="24dp"
                android:background="@color/colorAddressDivider"/>

        <View
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        <Button
                android:id="@+id/button_personalize_later"
                android:layout_width="match_parent"
                android:text="@string/personalize_later_button"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginTop="90dp"
                android:layout_marginStart="47dp"
                android:layout_marginEnd="48dp"
                android:background="@color/colorPersonalizeButtonBackground"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="@string/personalize_update_title"
                style="@style/StellarTextView_14sp"
                android:alpha="0.3"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="27dp"
                android:gravity="center"
                android:lineSpacingExtra="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView_update_preferences"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>