<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        tools:showIn="@layout/activity_food_preference_list"
        android:background="@color/colorFoodPreferBackground"
        android:layout_height="139dp">

    <TextView
            style="@style/StellarTextView_18sp"
            android:text="@string/food_list_name_dummy"
            android:id="@+id/textView_food_list_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:alpha="0.5"
            style="@style/StellarTextView_14sp"
            android:text="@string/food_list_content_dummy"
            android:id="@+id/textView_food_list_row_content"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_food_list_row_name"/>

    <ImageView
            android:id="@+id/imageView_food_list_image"
            android:src="@mipmap/ic_stellar_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp"
            android:contentDescription="@string/food_list_content_dummy"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:id="@+id/imageView_food_list_select"
            android:contentDescription="@string/food_list_content_dummy"
            android:src="@drawable/ic_food_selected"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15dp" />


</androidx.constraintlayout.widget.ConstraintLayout>