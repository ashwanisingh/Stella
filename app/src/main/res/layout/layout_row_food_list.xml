<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:animateLayoutChanges="true"
        android:layout_height="wrap_content">

    <TextView
            style="@style/StellarTextView_18sp"
            android:text="@string/food_list_name_dummy"
            android:gravity="center_vertical"
            android:id="@+id/textView_food_list_row_name"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:drawableEnd="@mipmap/ic_food_unselect"/>

    <View
            android:alpha="0.2"
            android:background="@color/colorAddressDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

</LinearLayout>