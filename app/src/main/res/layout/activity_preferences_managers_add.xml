<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".drawer.PreferencesManagersListActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".drawer.PreferencesManagersListActivity">

        <Button
                style="@style/StellarBackButton"
                android:id="@+id/button_manager_add_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:layout_gravity="center"
                android:textAllCaps="true"
                style="@style/StellarTextView_18sp"
                android:text="@string/info_preferences_managers"
                android:id="@+id/textView_managers_add_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/button_manager_add_back"/>

        <TextView
                android:layout_gravity="center"
                android:text="@string/info_preferences_managers_help"
                android:alpha="0.5"
                style="@style/StellarTextView_14sp"
                android:id="@+id/textView_managers_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_managers_add_title"/>


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_managers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:listitem="@layout/layout_row_managers"
                tools:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_managers_help" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
                android:background="@drawable/ic_add"
                android:id="@+id/button_managers_add"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="56dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/layout_managers_bottom_sheet"/>
</LinearLayout>
