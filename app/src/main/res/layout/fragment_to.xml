<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <LinearLayout
            android:id="@+id/layout_to_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="140dp"
            android:fitsSystemWindows="true"
            android:layout_marginBottom="60dp"
            tools:context=".booking.PlaceSelectionActivity">

        <TextView
                style="@style/StellarTextView_18sp"
                android:alpha="0.5"
                android:text="@string/booking_to"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="78dp"
                android:layout_marginEnd="78dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="30dp"
                android:background="@color/colorAddressDivider"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_flight_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>